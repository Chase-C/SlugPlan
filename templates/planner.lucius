    background-color: #aaa;
}

.course-button {
    position: absolute;
    top: 8px;

    border: 0px solid transparent;
    border-radius: 4px;

    width: 24px;
    height: 24px;

    cursor: pointer;
    -webkit-user-select: none;
       -moz-user-select: none;
        -ms-user-select: none;
            user-select: none;

    background-repeat: no-repeat;
    background-position: center center;
    background-color: #eee;
}

.course-button:hover {
    background-color: #ddd;
}

.edit-button {
    right: 8px;
    background-image: url(@{StaticR img_edit_s_png});
    background-size: 14px 14px;
}

.remove-button {
    left: 8px;
    background-image: url(@{StaticR img_close_s_png});
