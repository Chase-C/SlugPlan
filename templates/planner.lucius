}

.search-sug {
    position: relative;
    min-width: 310px;
    padding: 0px 4px;
    font-size: 14px;

    cursor: pointer;
    -webkit-user-select: none;
       -moz-user-select: none;
        -ms-user-select: none;
            user-select: none;

    overflow: hidden;
    text-overflow: ellipsis;
}

.course-display {
    position: relative;
    background-color: #eee;
}

.course-header {
    font-size: 14px;
    text-align: center;
    display: block;
}

.course-description {
    margin-top: 8px;
    height: 120px;
